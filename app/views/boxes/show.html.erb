<div class="whitespace"></div>

<% flash.each do |type, message| %>
  <p><%= type %>: <%= message %></p>
<% end %>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
      <div class="box-title">
			<h2>
			  <%= @box.title %>
			</h2>

      <div class="btn btn-primary"><%= link_to "Edit Box", edit_box_path(@box) %></div>
      <div class="btn btn-primary"><%= link_to " Delete Box", box_path(@box),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></div>
        </div>
			<div class="row">
				<div class="col-md-6">
          <div class="box-photo">
				<img class="box_profile" src="<%= @box.image %>">
      </div>
				</div>
				<div class="col-md-6">
          <div class="box-info">
					<ul>
						<li>
						Created By: <%= @box.user.email %>
          </li><br>
						<li>
						Number of Recipes in Box: <%= @box.recipes.count %>
						</li>
					</ul>
        </div>
				</div>
			</div>
		</div>
	</div>
  <div class="row">
				<div class="col-md-12">
          <div class="row">
            <div id="recipes" class="transitions-enabled">
              <div class="recipe-wrapper">
                <div class="col-md-4">
                <% @box.recipes.each do |recipe| %>
                  <div class="masonry_box">
                    <h4><%= recipe.title %></h4>
                    <%= link_to image_tag("#{recipe.image}"), recipe_path(recipe) %>
                    <div class="btn btn-primary"><%= link_to "View Recipe", recipe_path(recipe) %></div>
                  </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
</div>
